<%- include("../partials/header") %> 
<%- include("../partials/navbar") %>

<main class="container">
    <section>
        <h4 class="display-4 text-center mt-3 mb-3">My Blog App</h4>
    </section>
    <div class="row">
        <%for(let blog of blogs){%> 
            <div class="col-lg-12">
                <div class="card mt-3 mb-3 m-auto" style="width: 43rem;">
                    <h3 class="card-title pt-2 ps-2"><%= blog.name %></h3>
                    <img src="<%= blog.img %>" class="card-img-top p-2" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.author %></h5>
                      <p class="card-text"><%= blog.desc.substring(0,300) %>...</p>
                      <a href="/blogs/<%= blog._id %> " class="btn btn-primary">More Info</a>
                    </div>
                  </div>
            </div>
        <%}%>
    </div>
</main>

<%- include("../partials/footer") %>
